<%= form_with(model: @product) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>

  <div class="form-control">
    <%= form.label :category %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-black' %>
  </div>
<% end %>
<%= link_to 'Back', products_path, class: 'btn btn-primary' %>
